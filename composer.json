{
    "name": "atoolo/crawler",
    "version": "1.0.0",
    "description": "Automated crawler-based generation and indexing to Solr.",
    "type": "symfony-bundle",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "atoolo/search-bundle": "^1.14",
        "spatie/robots-txt": "^2.5.3",
        "symfony/console": "^7.4.4",
        "symfony/css-selector": "^7.4",
        "symfony/dom-crawler": "^7.4.4",
        "symfony/dotenv": "^7.4",
        "symfony/flex": "^2.10",
        "symfony/framework-bundle": "^7.4.5",
        "symfony/http-client": "^7.4.5",
        "symfony/monolog-bundle": "^4.0.1",
        "symfony/runtime": "^7.4.1",
        "symfony/yaml": "^7.4.1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Atoolo\\Crawler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Atoolo\\Cralwer\\Tests\\": "tests/"
        }
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.2",
        "infection/infection": "^0.32.4",
        "phpcompatibility/php-compatibility": "^9.3.5",
        "phpdocumentor/type-resolver": "^2.0",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.13.5"
    },
    "scripts": {
        "post-install-cmd": "phive --no-progress install --force-accept-unsigned --trust-gpg-keys C00543248C87FB13,4AA394086372C20A,CF1A108D0E7AE720,51C67305FFC2E5C0,E82B2FB314E9906E",
        "analyse": [
            "@analyse:phplint",
            "@analyse:phpstan",
            "@analyse:phpcsfixer",
            "@analyse:compatibilitycheck"
        ],
        "analyse:compatibilitycheck": "./vendor/bin/phpcs --standard=./phpcs.compatibilitycheck.xml",
        "analyse:phpcsfixer": "./tools/php-cs-fixer check --diff --show-progress=dots",
        "analyse:phplint": "./tools/phplint",
        "analyse:phpstan": "./tools/phpstan analyse",
        "cs-fix": [
            "@cs-fix:php-cs-fixer"
        ],
        "cs-fix:php-cs-fixer": "./tools/php-cs-fixer fix",
        "report": [
            "@report:phpstan"
        ],
        "report:phpstan": "./tools/phpstan analyse --no-progress --no-ansi --no-interaction --error-format=checkstyle > ./var/log/phpstan-report.xml || exit 0",
        "test": [
            "@test:phpunit"
        ],
        "test:infection": "vendor/bin/infection --threads=8 --no-progress --only-covered -s || exit 0",
        "test:phpunit": "./tools/phpunit.phar -c phpunit.xml --coverage-text",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    }
}
